<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/boder_bottom_sheet"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivBottomSheetAlbumImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/song_music" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_gravity="center|left"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBottomSheetAlbumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Đạt G, Du uyên"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvBottomSheetAlbumNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 bài hát" />
        </LinearLayout>
    </LinearLayout>
<!--    Gạch ngang-->
    <ImageView
        android:id="@+id/image"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:srcCompat="@drawable/gachngang" />
<!--    Tùy chọn-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/ivBottomSheetDelete"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/delete" />

        <TextView
            android:id="@+id/tvBottomSheetDeleteName"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Xóa"
            android:textSize="18dp"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>